                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List" >
    id, user_id, name, in_or_ex, remark, dele
  </sql>
  
  <!-- 查询income项 -->
  <select id="selectIncomeItemByUserId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    SELECT
		id,name,remark,sort
	FROM
		item
	WHERE
		user_id = #{id,jdbcType=INTEGER}
	AND in_or_ex = 'in'
	AND dele = 1
	Order By sort
  </select>
  
  <!-- 查询expenditure项 -->  
